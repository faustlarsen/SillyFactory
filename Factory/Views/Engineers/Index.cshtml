@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>The Engineers</h1>
<form>
    <i class="glyphicon glyphicon-search"></i><input type="text" name="EngineerSearch" placeholder="search and press enter">
</form>

@if (@Model.Count == 0)
{
  <h3>No engineers have been hired yet!</h3>
}

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
}

<p>@Html.ActionLink("Add New Engineer", "Create", "Engineers")</p>
<p>@Html.ActionLink("Delete All Engineers", "DeleteAll")</p>

