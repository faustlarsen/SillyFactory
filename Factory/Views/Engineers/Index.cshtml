@{
  Layout = "_Layout";
}
@using Factory.Models;
@using System.Security.Claims
@model IEnumerable<Factory.Models.Engineer>;

<div class="container card">
    <h1>The Engineers</h1>
    <hr>
    <form>
        <i class="glyphicon glyphicon-search"></i><input type="text" name="EngineerSearch" placeholder="search and press enter">
    </form>
    <hr>
    @if (@Model.Any())
    {
      @foreach (Engineer engineer in Model)
      {
        <h6><li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li></h6>
      } 
    }
    else    
    {
        <p>No engineers have been hired yet!</p>
    }
    <hr>
    <br>
    <input class="btn btn-info" type="button" value="Add New Engineer" onclick='location.href="@Url.Action("Create", "Engineers")";' />
    <input class="btn btn-info" type="button" value="Delete All Engineers" onclick='location.href="@Url.Action("DeleteAll")";' />
    <input class="btn btn-info" type="button" value="Home" onclick='location.href="@Url.Action("Index", "Home")";' />
</div>