@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<div class="container card">
    <h1>Add New Engineer</h1>

    @using (Html.BeginForm())
    {
        <p>Engineer Name: @Html.TextBoxFor(model => model.Name)</p>
        
        @Html.Label("Select machine:")
        @Html.DropDownList("MachineId", (SelectList)ViewBag.MachineId, "-No machines-")

        <input type="submit" value="Add new engineer" />
    }
    <p>@Html.ActionLink("Engineer List", "Index")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

