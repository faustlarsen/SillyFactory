@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;
<div class="container card">
    <h1>The Machines</h1>
    <form>
        <i class="glyphicon glyphicon-search"></i><input type="text" name="MachineSearch" placeholder="search and press enter">
    </form>

    @if (@Model.Count == 0)
    {
      <h3>No machines have been added yet!</h3>
    } 

    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }) | @machine.InspectionDate</li>
    }

    <p>@Html.ActionLink("Add New Machine", "Create", "Machines")</p>
    <p>@Html.ActionLink("Delete All Machines", "DeleteAll")</p>
</div>